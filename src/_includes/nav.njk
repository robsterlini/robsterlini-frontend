<nav class="nav">
  <div class="group nav-logo-wrapper">
    {% if not layoutNoLogo %}<a class="nav-logo" href="/" title="Visit the homepage">
      <span>R<span class="nav-logo__hide">ob </span>S<span class="nav-logo__hide">terlini</span></span>
    </a>{% endif %}
  </div>
  <div class="nav-list">
    <ul class="group">
      {% for item in global.nav %}
        <li>
          {% if item.link %}
            <a href="{{ item.link }}" class="lead">{{ item.title }}</a>
          {% else %}
            <span class="lead">{{ item.title }}</span>
          {% endif %}
          <ul>
            {% for link in item.links %}
              <li>
                {% if link.link %}
                  <a href="{{ link.link }}"{% if nav and nav === link.nav %} class="active"{% endif %}>
                    {{ link.label | safe }}
                  </a>
                {% else %}
                  <span class="soon">{{ link.label | safe }}</span>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
        </li>
      {% endfor %}
    </ul>
  </div>
</nav>
<button class="nav-toggle sc" id="toggle-menu" aria-label="Toggle Menu">
  <svg width="20" height="16" viewBox="0 0 20 16" xmlns="http://www.w3.org/2000/svg"><g fill="#000" fill-rule="evenodd"><path d="M0 0h20v2H0zM0 7h20v2H0zM0 14h20v2H0z"/></g></svg>
</button>
