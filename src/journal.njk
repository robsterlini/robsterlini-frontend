{% from "components/hero.html" import hero %}

{{ hero(heroTitle, header=heroHeader) }}

<main class="main">
  <div class="group">
    {% for entry in collections.entries %}
      {% if loop.index == 1 %}
        <div class="journal-latest">
          {% journalEntry entry, "h3", "h2", "Latest Entries", true %}
      {% elif loop.index <= 3 %}
        {% journalEntry entry, "h3", "h3", "", true %}
      {% endif %}
      {% if loop.index == 3 %}
        </div>

        <div class="journal-older">
          <h2 class="lead">A few older&nbsp;entries</h2>
          <ul class="list--block">
      {% endif %}

      {% if loop.index > 3 %}
            <li>
              {% journalEntryShort entry %}
            </li>
      {% endif %}

      {% if loop.last %}
          </ul>

          <ul class="list--btns mb0">
            <li><a href="/feed.xml">Follow the <span class="sc">RSS</span>&nbsp;feed</a></li>
          </ul>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</main>
