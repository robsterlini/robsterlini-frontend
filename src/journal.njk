{% from "components/hero.html" import hero %}

{{ hero(hero_h1, header=title) }}

<main class="main journal">
  <div class="group">
    {% for entry in collections.entries %}
      {% if loop.index == 1 %}
        <div>
          {% journalEntry entry, "h2", "Latest entry" %}
        </div>

        <div class="journal-older">
          <h2 class="p"><span class="lead">A few older entries</span></h2>
          <ul class="list">
      {% endif %}

      {% if loop.index > 1 and loop.index <= 4 %}
            <li>
              {% journalEntryShort entry %}
            </li>
      {% endif %}

      {% if loop.last %}
          </ul>

          <h2 class="p"><span class="lead">Full archive</span></h2>
          <ul class="list">
            <li><a href="/journal/archive">See all entries</a></li>
            <li><a href="/feed.xml">Follow the <span class="sc">RSS</span>&nbsp;feed</a></li>
          </ul>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</main>
