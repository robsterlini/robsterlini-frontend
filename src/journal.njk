{% from "components/hero.html" import hero %}

{{ hero(heroTitle, header=heroHeader) }}

<main class="main">
  <div class="group">
    {% for entry in collections.entries %}
      {% if loop.index == 1 %}
        <div class="journal-latest">
          {% journalEntry entry, "h2", "Most recent entry", true, true %}
        </div>

        <div class="journal-older">
          <h2 class="lead">A few older&nbsp;entries</h2>
          <ul class="list--block">
      {% endif %}

      {% if loop.index > 1 %}
            <li>
              {% journalEntryShort entry %}
            </li>
      {% endif %}

      {% if loop.last %}
          </ul>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</main>
